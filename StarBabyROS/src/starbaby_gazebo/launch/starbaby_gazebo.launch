<launch>
	<machine name="localhost" address="localhost" env-loader="/opt/ros/kinetic/env.sh"/>

	<!-- these are the arguments you can pass this launch file, for example paused:=true -->
	<arg name="paused" default="false"/>
	<arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="headless" default="false"/>
	<arg name="debug" default="false"/>
	
	
	<!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find starbaby_gazebo)/worlds/RobotCities-2018.world"/>
		<arg name="debug" value="$(arg debug)" />
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)"/>
		<arg name="use_sim_time" value="$(arg use_sim_time)"/>
		<arg name="headless" value="$(arg headless)"/>
	</include>
	
	<!-- Description  -->
	<include file="$(find starbaby_description)/launch/starbaby_description.launch">
	</include>
	
	<!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
	<node name="urdf_spawner_robot" pkg="gazebo_ros" type="spawn_model" respawn="false"
		args="-urdf -model starbaby -param robot_description -z 0.3"/>
	
	<!-- Field description  -->
	<param name="robot_cities_2018"
		command="$(find xacro)/xacro --inorder '$(find starbaby_gazebo)/urdf/RobotCities-2018.xacro'" />
	
	<!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
	<node name="urdf_spawner_world" pkg="gazebo_ros" type="spawn_model" respawn="false"
		args="-urdf -model robot_cities_2018 -param robot_cities_2018 -z 0.1"/>
	
	<!-- State  -->
	<include file="$(find starbaby_state)/launch/starbaby_state.launch">
	</include>
	
	<!-- Control  -->
	<include file="$(find starbaby_control)/launch/starbaby_control.launch">
	</include>
	
	<!-- Sensor  -->
	<include file="$(find starbaby_sensor)/launch/starbaby_sensor.launch">
	</include>
	
	<!-- Trilateration  -->
	<include file="$(find starbaby_trilateration)/launch/starbaby_trilateration.launch">
	</include>
	
	<!-- Localization  -->
	<include file="$(find starbaby_localization)/launch/starbaby_localization.launch">
	</include>
	
	<!-- Navigation  -->
	<include file="$(find starbaby_navigation)/launch/starbaby_navigation.launch">
	</include>
	
	<!-- Teleop  -->
	<include file="$(find starbaby_teleop)/launch/starbaby_teleop.launch">
	</include>
	
	<!-- Gazebo mock -->
	<node name="starbaby_gazebo" pkg="starbaby_gazebo" type="starbaby_gazebo_node" ns="/starbaby">
	</node>

	<!-- Rviz   -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find starbaby_gazebo)/rviz/starbaby_gazebo.rviz"/>
</launch>